{
	"name": "wmde/fundraising-store",
	"description": "Persistence services around the fundraising database",
	"require": {
		"php": ">=5.6",
		"doctrine/dbal": "~2.4",
		"doctrine/orm": "~2.4",
		"gedmo/doctrine-extensions": "^2.4"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "~2.2",
		"phpmd/phpmd": "~2.3",
		"phpunit/phpunit": "~5.4"
	},
	"autoload": {
		"psr-4": {
			"WMDE\\Fundraising\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit"
		],
		"cs": [
			"composer phpcs",
			"composer phpmd"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd tests/ text phpmd.xml"
		]
	},
	"bin": [
		"cli-config.php"
	]
}
